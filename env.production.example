# Production MySQL Database Configuration
# Copy this file to .env.production and update with your actual production values
# NEVER commit .env.production to git!

# Production Database (Railway, PlanetScale, Clever Cloud, etc.)
MYSQL_PRODUCTION_HOST=your-production-host.railway.app
MYSQL_PRODUCTION_PORT=3306
MYSQL_PRODUCTION_DATABASE=InsuranceClaimsDB
MYSQL_PRODUCTION_USER=mysql
MYSQL_PRODUCTION_PASSWORD=your_secure_production_password_here

# JWT Settings for Production
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_32_characters
JWT_ISSUER=InsuranceClaimsAPI
JWT_AUDIENCE=InsuranceClaimsClient

# Application Environment
ASPNETCORE_ENVIRONMENT=Production

# Connection String Format (for reference):
# Server=${MYSQL_PRODUCTION_HOST};Database=${MYSQL_PRODUCTION_DATABASE};Uid=${MYSQL_PRODUCTION_USER};Pwd=${MYSQL_PRODUCTION_PASSWORD};Port=${MYSQL_PRODUCTION_PORT};CharSet=utf8mb4;SslMode=Required;


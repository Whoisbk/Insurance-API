POST {{InsuranceClaimsAPI_HostAddress}}/api/auth/register
Content-Type: application/json

{
  "firstName": "John",
  "lastName": "Doe",
  "email": "john.doe@example.com",
  "password": "SecurePass123!",
  "confirmPassword": "SecurePass123!",
  "firebaseUid": "firebase-uid-from-react-app",
  "phoneNumber": "+1234567890",
  "companyName": "Example Company",
  "address": "123 Main St",
  "city": "Cape Town",
  "postalCode": "8001",
  "country": "South Africa",
  "role": 1,
  "acceptTerms": true
}

